{
  "name": "cm-messaging-node",
  "version": "0.0.3",
  "description": "Package to make it very easy to send text messages with CM.com",
  "keywords": [
    "cm",
    "cm.com",
    "sms",
    "messaging",
    "text",
    "rcs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EricSmekens/cm-messaging-node.git"
  },
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "author": "Eric Smekens",
  "license": "MIT",
  "dependencies": {
    "bluebird": "~3.5.1",
    "http": "~0.0.0",
    "request": "~2.87.0"
  },
  "devDependencies": {
    "@types/chai": "~4.1.3",
    "@types/mocha": "~5.2.0",
    "@types/node": "^8.0.0",
    "chai": "~4.1.2",
    "mocha": "~5.2.0",
    "source-map-support": "~0.5.6",
    "ts-node": "~6.0.5",
    "tslint": "~5.10.0",
    "typescript": "~2.8.3",
    "nyc": "~11.8.0"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project ./",
    "test": "mocha -r ts-node/register spec/**/*.spec.ts",
    "test:coverage": "nyc mocha spec/**/*.spec.ts"
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
